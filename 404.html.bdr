<!DOCTYPE html>
<html lang="zh-CN">

<head>
    <meta charset="UTF-8">
    <title>404 - 页面未找到</title>
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            font-family: Arial, sans-serif;
            /* 默认背景颜色 */
            background-color: #333;
            color: white;
            position: relative;
        }

        .background-image {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-size: cover;
            background-position: center;
            opacity: 0.5; /* 背景图片半透明 */
            z-index: 0;
        }

        .content {
            text-align: center;
            z-index: 1;
            position: relative;
        }

        h1 {
            font-size: 3em;
            margin-bottom: 0.2em;
        }

        .btn-back {
            display: inline-block;
            padding: 10px 20px;
            margin-top: 20px;
            font-size: 1.5em;
            color: white;
            background-color: rgba(74, 144, 226, 0.8); /* 半透明蓝色 */
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
        }

        .btn-back:hover {
            background-color: rgba(74, 144, 226, 1); /* 更深一点的蓝色 */
        }
    </style>
</head>

<body>

<!-- 背景图片 -->
<div class="background-image" id="backgroundImage"></div>

<!-- 页面内容 -->
<div class="content">
    <h1>404</h1>
    <!-- 返回首页按钮 -->
    <!-- <a href="/" class="btn-back">返回首页</a> -->
</div>

<script>
    // 定义本地图片路径
    const images = [
        "/img/404/bgd_404_01.jpg",
        "/img/404/bgd_404_02.jpg",
        "/img/404/bgd_404_03.jpg",
        "/img/404/bgd_404_04.jpg",
        "/img/404/bgd_404_05.jpg",
        "/img/404/bgd_404_06.jpg",
    ];

    // 随机选择一张图片
    const randomImage = images[Math.floor(Math.random() * images.length)];

    // 设置背景图片
    document.getElementById('backgroundImage').style.backgroundImage = 'url(' + randomImage + ')';
</script>

</body>

</html>